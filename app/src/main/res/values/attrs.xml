<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="ForecastCompoundView">
    <attr format="string" name="day"/>
    <attr format="reference" name="weather_icon"/>
    <attr format="string" name="temperature"/>

    <attr format="enum" name="unit">
      <enum name="celsius" value="0"/>
      <enum name="fahrenheit" value="1"/>
    </attr>

  </declare-styleable>

  <declare-styleable name="ForecastDetailCompoundView">
    <attr format="reference" name="detail_icon"/>
    <attr format="string" name="txt_top"/>
    <attr format="string" name="txt_bottom"/>
  </declare-styleable>

  <declare-styleable name="TemperatureTextView">
    <attr format="enum" name="temp_unit">
      <enum name="celsius" value="0"/>
      <enum name="fahrenheit" value="1"/>
    </attr>
  </declare-styleable>

</resources>
