<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SplashTheme" parent="AppTheme">
    <item name="android:windowBackground">@drawable/splash</item>
  </style>

  <style name="ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">@color/colorAccent</item>
  </style>

  <style name="StyleLineHorizontal">
    <item name="android:layout_marginTop">@dimen/x4</item>
    <item name="android:layout_marginBottom">@dimen/x4</item>
    <item name="android:background">@android:color/holo_blue_dark</item>
  </style>

  <style name="StyleHomeCommon">
    <item name="android:fontFamily">@font/nunito_regular</item>
  </style>

  <style name="StyleLocation" parent="StyleHomeCommon">
    <item name="android:layout_marginTop">@dimen/x5</item>
    <item name="android:textSize">@dimen/h4</item>
  </style>

  <style name="StyleTempSummary" parent="StyleHomeCommon">
    <item name="android:textSize">@dimen/caption</item>
    <item name="android:layout_margin">@dimen/x1</item>
  </style>

  <style name="StyleCurrentTemp" parent="StyleHomeCommon">
    <item name="android:textSize">@dimen/h1</item>
  </style>

  <style name="StyleTitle" parent="StyleHomeCommon">
    <item name="android:textSize">@dimen/h5</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
